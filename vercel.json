{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install && cd server && npm install && cd ../client && npm install",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/output/(.*)", "destination": "/api/output/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "functions": {
    "api/[[...path]].ts": {
      "memory": 3008,
      "maxDuration": 60
    }
  }
}
